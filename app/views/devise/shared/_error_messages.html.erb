<% if resource.errors.any? %>
  <script>
    <% resource.errors.full_messages.each do |message| %>
      iziToast.error({
        title: "Error",
        message: '<%= message %>',
        position: 'topRight',
        timeout: 5000,
        icon: 'fa fa-exclamation-triangle'
      });
    <% end %>
  </script>
<% end %>
